{
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src*": ["./src*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
